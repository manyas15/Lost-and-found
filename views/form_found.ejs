<% const content = `
<section class="container">
  <h1>Report Found Item</h1>
  <form class="form" method="post" action="/found">
    <div class="row">
      <label>Item Name* <input name="itemName" required/></label>
      <label>Category <input name="category" placeholder="e.g., Electronics, ID Card"/></label>
    </div>
    <label>Description <textarea name="description" rows="4" placeholder="Color, brand, unique marks..."></textarea></label>
    <div class="row">
      <label>Location Found* <input name="location" required placeholder="Where did you find it?"/></label>
      <label>Date Found* <input type="date" name="dateFound" required/></label>
    </div>
    
    <div class="row">
      <label>Your Name <input name="contactName"/></label>
      <label>Contact Email* <input type="email" name="contactEmail" required/></label>
    </div>
    <label>Keeper Info <input name="keeperInfo" placeholder="With security desk, dept. office, etc." /></label>
    <button class="btn" type="submit">Submit Found Report</button>
  </form>
</section>
` %>
<%- include('partials/layout', { title, content }) %>
